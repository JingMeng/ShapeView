<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <com.github.xwc.view.ShapeView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:shape_borderWidth="3dp"
        app:shape_roundRect_bottomRightRadius="20dp"
        app:shape_roundRect_default_color="#3F51B5"
        app:shape_roundRect_pressed_color="#303F9F"
        app:shape_roundRect_topLeftRadius="20dp"
        app:shape_type="roundRect">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ShapeViewButton"
            android:textColor="#87CEEB"
            android:textSize="18sp"
            android:textStyle="bold" />

    </com.github.xwc.view.ShapeView>

    <com.github.xwc.view.ShapeView
        android:id="@+id/diagonalShapeView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        app:shape_diagonal_angle="10"
        app:shape_diagonal_direction="left"
        app:shape_diagonal_position="bottom"
        app:shape_type="diagonal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/image5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ShapeView"
            android:textColor="#87CEEB"
            android:textSize="18sp"
            android:textStyle="bold" />
    </com.github.xwc.view.ShapeView>

    <com.github.xwc.view.ShapeView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:shape_borderWidth="3dp"
        app:shape_drawable="@mipmap/image1"
        app:shape_type="circle" />

</LinearLayout>